@import 'nib'
@import 'http://fonts.googleapis.com/css?family=Lato:400,700&.css'

global-reset()
reset-html5()

body
	background #EEE
	font-family 'Lato'
	font-size 14px

#placeholder
	background white
	margin 10px
	padding 10px

.placeholder__label
	display block
	padding 5px 0
	font-weight bold

.placeholder__field
	display block
	border: 1px solid #CCC
	padding 5px
	margin 0
	&:focus
		border-color: blue
		outline: 0
		box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px blue

.placeholder__button
	clearfix()
	font-size 1em
	display inline-block
	margin 0
	border none
	padding 10px
	border 075
	margin-top 10px
	background #666
	color white

#placeholder__email
	@extends .placeholder__field

#placeholder__send
	@extends .placeholder__button

#placeholder__send-again
	@extends .placeholder__button
	cursor hand
	cursor pointer